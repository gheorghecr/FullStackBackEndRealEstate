{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "messagesList": {
        "$id": "#messagesList",
        "title": "Messages List",
        "description": "A list containing all messages",
        "type": "object",
        "properties": {
          "messageID": {
            "description": "ID of the message.",
            "type": "integer"
          },
          "fromID": {
            "description": "ID of the sender.",
            "type": "integer"
          },
          "toID": {
            "description": "ID of the receiver.",
            "type": "integer"
          },
          "propertyID": {
            "description": "ID of the property for the conversation.",
            "type": "integer"
          },
          "conversationID": {
            "description": "ID of the conversation.",
            "type": "integer"
          },
          "messageText": {
            "description": "Message Text.",
            "type": "string"
          },
          "archived": {
            "description": "Boolean that indicates if message is archived or not.",
            "type": "boolean"
          }
        }
      },
  
      "addMessage": {
        "$id": "#addMessage",
        "title": "Add message",
        "description": "Data to add a new message.",
        "type": "object",
        "properties": {
          "fromID": {
            "description": "ID of the sender.",
            "type": "integer"
          },
          "toID": {
            "description": "ID of the receiver.",
            "type": "integer"
          },
          "propertyID": {
            "description": "ID of the property for the conversation.",
            "type": "integer"
          },
          "conversationID": {
            "description": "ID of the conversation.",
            "type": "integer"
          },
          "messageText": {
            "description": "Message Text.",
            "type": "string"
          },
          "archived": {
            "description": "Boolean that indicates if message is archived or not.",
            "type": "boolean"
          }
        },
        "required": ["fromID", "toID", "propertyID", "messageText"],
        "additionalProperties": false
      },
  
      "messageUpdated": {
        "$id": "#messageUpdated",
        "title": "Message Updated",
        "description": "Confirmation of a successful update.",
        "type": "object",
        "properties": {
          "ID": {
            "description": "ID of the updated property record",
            "type": "integer"
          },
          "updated": {
            "description": "Boolean indicator of success",
            "type": "boolean"
          },
          "link": {
            "description": "Path to retrieve feature record",
            "type": "string",
            "format": "uri"
          }
        }
      },
  
      "messageDeleted": {
        "$id": "#messageDeleted",
        "title": "Message Deleted",
        "description": "Confirmation of a successful deletion.",
        "type": "object",
        "properties": {
          "ID": {
            "description": "ID of the deleted message record",
            "type": "integer"
          },
          "deleted": {
            "description": "Boolean indicator of success",
            "type": "boolean"
          }
        }
      }
    }
  }